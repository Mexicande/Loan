<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.com.creditloans.ui.actiivty.RegisterActivity">
    <include layout="@layout/toolbar_white"/>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.com.creditloans.view.editext.PowerfulEditText
            android:id="@+id/ed_phone"
            android:paddingLeft="15dp"
            android:layout_toRightOf="@id/phone"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingRight="15dp"
            android:drawablePadding="15dp"
            app:leftDrawableWidth="18dp"
            app:leftDrawableHeight="20dp"
            android:drawableLeft="@mipmap/icon_tel"
            android:lines="1"
            android:hint="手机号"
            android:maxLength="11"
            android:inputType="phone"
            android:textSize="15sp"
            android:background="@null"
            android:textColorHint="@color/bg_color_99"
            app:theme="@style/MyEditText"
            app:funcType="canClear"
            />
        <View
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:background="@color/bg_color_ee"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <ImageView
                android:id="@+id/iv"
                android:layout_centerVertical="true"
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_code"/>

            <Button
                android:id="@+id/bt_code"
                android:textColor="@color/colorPrimary"
                android:text="获取验证码"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@drawable/code_bg"/>
            <EditText
                android:id="@+id/ed_code"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/bt_code"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:lines="1"
                android:hint="验证码"
                android:textSize="15sp"
                android:textColorHint="@color/bg_color_99"
                android:maxLength="6"
                android:inputType="number"
                android:theme="@style/MyEditText"
                />
        </RelativeLayout>
    </LinearLayout>
    <com.allen.library.SuperButton
        android:id="@+id/bt_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:sCornersRadius="5dp"
        android:text="完成"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:sSelectorDisableColor="@color/dispress_color"
        app:sUseSelector="true"
        android:enabled="false"
        app:sSelectorNormalColor="@color/colorPrimary"
        app:sSelectorPressedColor="@color/press_color"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登陆/注册即表示同意"/>
        <TextView
            android:layout_marginTop="5dp"
            android:paddingRight="5dp"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:paddingBottom="5dp"
            android:layout_marginRight="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《服务协议》"/>
    </LinearLayout>
</LinearLayout>
