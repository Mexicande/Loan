<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_bg"
    tools:context="cn.com.creditloans.ui.actiivty.LoginActivity">
       <include layout="@layout/toolbar_white"/>
        <LinearLayout
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <ImageView
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/logo"/>
                <cn.com.creditloans.view.editext.PowerfulEditText
                    android:id="@+id/ed_phone"
                    android:layout_marginTop="50dp"
                    android:paddingLeft="25dp"
                    android:layout_toRightOf="@id/phone"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:paddingBottom="8dp"
                    android:paddingRight="25dp"
                    android:drawablePadding="15dp"
                    app:leftDrawableWidth="18dp"
                    app:leftDrawableHeight="20dp"
                    android:drawableLeft="@mipmap/icon_tel"
                    android:lines="1"
                    android:hint="手机号"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:textSize="15sp"
                    android:background="@mipmap/icon_et_bg"
                    android:textColorHint="@color/bg_color_99"
                    app:theme="@style/MyEditText"
                    app:funcType="canClear"
                    />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="65dp">
                <cn.com.creditloans.view.editext.PowerfulEditText
                    android:id="@+id/ed_pw"
                    android:layout_toRightOf="@id/phone"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:paddingBottom="8dp"
                    android:paddingRight="25dp"
                    android:paddingLeft="25dp"
                    android:drawablePadding="15dp"
                    app:leftDrawableWidth="18dp"
                    app:leftDrawableHeight="20dp"
                    android:drawableLeft="@mipmap/icon_pwd"
                    android:lines="1"
                    android:hint="验证码"
                    android:maxLength="6"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:background="@mipmap/icon_et_bg"
                    android:textColorHint="@color/bg_color_99"
                    app:theme="@style/MyEditText"
                    app:funcType="canWatchPwd"
                    />
                <Button
                    android:id="@+id/bt_code"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="13dp"
                    android:textColor="@color/colorPrimary"
                    android:text="获取验证码"
                    android:textSize="12sp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/code_bg"/>
            </RelativeLayout>

            <com.allen.library.SuperButton
                android:id="@+id/bt_login"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:sCornersRadius="12dp"
                android:text="立即登录"
                android:textSize="16sp"
                android:textColor="@color/white"
                app:sSelectorDisableColor="@color/dispress_color"
                app:sUseSelector="true"
                android:enabled="false"
                app:sSelectorNormalColor="@color/colorPrimary"
                app:sSelectorPressedColor="@color/press_color"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:textSize="12sp"
                    android:paddingBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登陆/注册即表示同意"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:paddingRight="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    android:paddingBottom="5dp"
                    android:layout_marginRight="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《服务协议》"/>
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>
