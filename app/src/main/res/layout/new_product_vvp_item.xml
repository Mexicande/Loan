<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:background="@color/bg_color_ff">
    <ImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/show_loan_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/logo"
        android:layout_marginRight="5dp"
        />

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_00"
        android:textSize="12sp"
        android:text="零用钱"
        android:layout_toRightOf="@+id/show_loan_iv"
        android:layout_marginTop="3dp"/>
    <LinearLayout
        android:id="@+id/view"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/show_loan_iv"
        android:layout_below="@+id/name"
        android:layout_marginTop="3dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="11sp"
            android:text="最高"
            android:textColor="@color/text_color_66"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/quota"
            android:textSize="11sp"
            android:textColor="@color/text_color_66"
            android:text="5000"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/new_product_vvp_item_tv4"
            android:textSize="11sp"
            android:text="日利率"
            android:textColor="@color/text_color_66"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/minrate"
            android:textSize="11sp"
            android:textColor="@color/text_color_66"
            android:text="0.30%"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/product_title"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/show_loan_iv"
        android:layout_below="@id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/text_color_66"
        android:text="极速信用贷，有身份证就能贷"/>
    <ImageView
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@mipmap/arrow"/>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_color_cc"
        android:layout_below="@id/product_title"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>
</RelativeLayout>
